<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayNow">

    <ImageView
        android:id="@+id/singer_pic_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/george_michael" />

    <TextView
        android:id="@+id/song_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Older"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="cursive" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backward_p"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/backward" />

        <ImageView
            android:id="@+id/play_p"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/play" />

        <ImageView
            android:id="@+id/forward_P"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/forward" />
    </LinearLayout>
</LinearLayout>